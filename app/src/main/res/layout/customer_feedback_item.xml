<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"
        android:id="@+id/customerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/bg_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="16sp"
        android:id="@+id/customerName"
        android:fontFamily="@font/font_family"
        android:textColor="@color/black_variant"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@+id/customerImage"
        app:layout_constraintTop_toTopOf="@+id/customerImage"
        app:layout_constraintBottom_toBottomOf="@id/customerImage"
        />

<!--    clock icon -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clock"
        android:id="@+id/feedbackClockIcon"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/feedbackDate"
        app:layout_constraintBottom_toBottomOf="@id/customerName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedbackDate"
        android:text="18/12/2023"
        android:textSize="14sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/customerName"
        app:layout_constraintTop_toTopOf="@+id/feedbackClockIcon"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerRatingBar"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/customerImage"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:ratingBarStyleSmall"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerRating"
        android:text="5.0"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/customerRatingBar"
        app:layout_constraintTop_toTopOf="@id/customerRatingBar"
        app:layout_constraintBottom_toBottomOf="@id/customerRatingBar"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/customerFeedback"
        android:text="Delivery on time. Order in good condition. I highly recommend this one"
        android:textSize="14sp"
        android:fontFamily="@font/font_family"
        android:layout_marginTop="5dp"
        android:paddingEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/customerRatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>