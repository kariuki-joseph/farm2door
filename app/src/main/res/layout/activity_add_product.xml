<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="@color/black_variant"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/productName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/productName"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="@drawable/edt_bg_white"
            android:hint="Product name"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textviewName" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Description"
            android:textColor="@color/black_variant"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/productDescription"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/productDescription"
            app:layout_constraintTop_toBottomOf="@+id/productName" />

        <EditText
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="@drawable/edt_bg_white"
            android:gravity="start|top"
            android:hint="Briefly describe your product"
            android:minHeight="102dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription" />

        <TextView
            android:id="@+id/textViewAddImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="10dp"
            android:text="Add product images (max 3)"
            android:textColor="@color/black_variant"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productDescription" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="68dp"
            android:layout_height="73dp"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddImages" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="68dp"
            android:layout_height="73dp"
            android:layout_marginStart="@dimen/default_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_img"
            app:layout_constraintBottom_toBottomOf="@+id/img1"
            app:layout_constraintEnd_toStartOf="@+id/img3"
            app:layout_constraintStart_toEndOf="@+id/img1"
            app:layout_constraintTop_toTopOf="@+id/img1" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="68dp"
            android:layout_height="73dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_img"
            app:layout_constraintBottom_toBottomOf="@+id/img1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img1" />

        <ImageButton
            android:id="@+id/btnCaptureImages"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rounded_corners"
            android:paddingStart="10dp"
            android:paddingEnd="70dp"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintEnd_toStartOf="@+id/btnUploadImages"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img1" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:elevation="0dp"
            android:padding="0dp"
            android:text="Capture"
            android:textColor="@color/color_primary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnCaptureImages"
            app:layout_constraintEnd_toEndOf="@+id/btnCaptureImages"
            app:layout_constraintTop_toTopOf="@+id/btnCaptureImages" />

        <ImageButton
            android:id="@+id/btnUploadImages"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/bg_rounded_corners"
            android:paddingStart="10dp"
            android:paddingEnd="70dp"
            android:src="@drawable/ic_upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnCaptureImages"
            app:layout_constraintTop_toTopOf="@+id/btnCaptureImages" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:elevation="0dp"
            android:padding="0dp"
            android:text="Upload"
            android:textColor="@color/color_primary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnUploadImages"
            app:layout_constraintEnd_toEndOf="@+id/btnUploadImages"
            app:layout_constraintTop_toTopOf="@+id/btnUploadImages" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="10dp"
            android:text="Price"
            android:textColor="@color/black_variant"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCaptureImages" />

        <EditText
            android:id="@+id/price"
            android:layout_width="110dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rounded_corners"
            android:hint="200"
            android:inputType="number"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPrice" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="per"
            android:textColor="@color/black_variant"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/price"
            app:layout_constraintStart_toEndOf="@+id/price"
            app:layout_constraintTop_toTopOf="@+id/price"
            app:layout_constraintVertical_bias="0.354" />

        <EditText
            android:id="@+id/unitName"
            android:layout_width="150dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginStart="13dp"
            android:hint="Kg"
            android:paddingStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/price"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/price"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="20dp"
            android:text="Number of items available in stock"
            android:textColor="@color/black_variant"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price" />

        <EditText
            android:id="@+id/inStock"
            android:layout_width="110dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rounded_corners"
            android:hint="500"
            android:inputType="number"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddLocation"
            android:text="Add location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inStock"
            android:layout_marginTop="20dp"
            style="@style/Button.Secondary"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:icon="@drawable/ic_location"
            app:iconTint="@color/color_primary"
            />

        <include
            android:id="@+id/progressBarLayout"
            layout="@layout/loading_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddLocation" />

        <Button
            android:id="@+id/btnAddProduct"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:text="Add product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>