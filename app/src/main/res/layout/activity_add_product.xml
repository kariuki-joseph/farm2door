<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:paddingBottom="20dp"
    >
    <TextView
        android:id="@+id/textviewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="@color/black_variant"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/productName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/productName"
        app:layout_constraintTop_toTopOf="parent"
         />

    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/default_margin"
        android:background="@drawable/edt_bg_white"
        android:hint="Product name"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewName" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Description"
        android:textColor="@color/black_variant"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/productDescription"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/productDescription"
        app:layout_constraintTop_toBottomOf="@+id/productName" />

    <EditText
        android:id="@+id/productDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/default_margin"
        android:background="@drawable/edt_bg_white"
        android:gravity="start|top"
        android:paddingTop="5dp"
        android:hint="Briefly describe your product"
        android:minHeight="102dp"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescription" />

    <TextView
        android:id="@+id/textViewAddImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Add product images (max 3)"
        android:textColor="@color/black_variant"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDescription" />
    
        <ImageView
            android:layout_width="68dp"
            android:layout_height="73dp"
            android:id="@+id/img1"
            android:src="@drawable/placeholder_img"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddImages" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="68dp"
        android:layout_height="73dp"
        android:layout_marginStart="@dimen/default_margin"
        android:src="@drawable/placeholder_img"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/img1"
        app:layout_constraintEnd_toStartOf="@+id/img3"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toTopOf="@+id/img1" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="68dp"
        android:layout_height="73dp"
        android:src="@drawable/placeholder_img"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintBottom_toBottomOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:id="@+id/btnSelectImages"
        android:layout_marginStart="@dimen/default_margin"
        android:src="@drawable/ic_upload"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rounded_corners"
        android:paddingEnd="70dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:textColor="@color/color_primary"
        android:textSize="14sp"
        android:padding="0dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnSelectImages"
        app:layout_constraintTop_toTopOf="@+id/btnSelectImages"
        app:layout_constraintBottom_toBottomOf="@+id/btnSelectImages"
        android:elevation="0dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPrice"
        android:text="Price"
        android:textColor="@color/black_variant"
        android:layout_marginStart="@dimen/default_margin"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectImages"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="110dp"
        android:layout_height="@dimen/edit_text_height"
        android:id="@+id/price"
        android:hint="200"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_rounded_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrice"
        android:paddingStart="15dp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="per"
        android:textColor="@color/black_variant"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/price"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toTopOf="@+id/price"
        app:layout_constraintVertical_bias="0.354" />

    <EditText
        android:id="@+id/unitName"
        android:layout_width="150dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginStart="13dp"
        android:background="@drawable/bg_rounded_corners"
        android:hint="kg"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/price"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/price"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:text="Number of items available in stock"
        android:textColor="@color/black_variant"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:layout_width="110dp"
        android:layout_height="@dimen/edit_text_height"
        android:id="@+id/stock"
        android:hint="500"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_rounded_corners"
        android:paddingStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:id="@+id/btnAddProduct"
        android:text="Add product"
        style="@style/Button.Primary"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/stock"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>